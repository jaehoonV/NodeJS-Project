<body>
    <h2> 10 X 10 MineSweeper</h2>

    <div style="width: 600px; display: inline-block; margin-left: 10%;">
        <!-- 타이머 -->
        <div class="container">
            <div class="container-segment">
                <div class="segment-title">Minutes</div>
                <div class="segment">
                    <div class="flip-card" data-minutes-tens>
                        <div class="top" id="minutes_tens">0</div>
                        <div class="bottom">0</div>
                    </div>
                    <div class="flip-card" data-minutes-ones>
                        <div class="top" id="minutes_ones">0</div>
                        <div class="bottom">0</div>
                    </div>
                </div>
            </div>
            <div class="container-segment">
                <div class="segment-title">Seconds</div>
                <div class="segment">
                    <div class="flip-card" data-seconds-tens>
                        <div class="top" id="seconds_tens">0</div>
                        <div class="bottom">0</div>
                    </div>
                    <div class="flip-card" data-seconds-ones>
                        <div class="top" id="seconds_ones">0</div>
                        <div class="bottom">0</div>
                    </div>
                </div>
            </div>
        </div>

        <div id="click_cnt_div">
            <i class="fa-solid fa-person-digging"></i><span id="left_click_cnt"></span>
            <i class="fa-sharp fa-solid fa-flag"></i><span id="right_click_cnt"></span>
        </div>
        <div id="game_board"></div>
    </div>
    <div id="history_board"></div>

